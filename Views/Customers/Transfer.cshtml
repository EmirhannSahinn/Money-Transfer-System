@model TransferModel

<h2>Transfer Money</h2>

<form asp-action="Transfer" method="post">
    <div class="form-group">
        <label asp-for="FromCustomerId">Sender Customer Id</label>
        <input asp-for="FromCustomerId" class="form-control" />
        <span asp-validation-for="FromCustomerId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ToCustomerId">Receiver Customer Id</label>
        <input asp-for="ToCustomerId" class="form-control" />
        <span asp-validation-for="ToCustomerId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Transfer</button>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>