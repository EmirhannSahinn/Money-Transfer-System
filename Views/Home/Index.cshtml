@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Money Transfer System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .hero-section {
            padding: 50px 0;
            background: #f8f9fa;
            text-align: center;
        }
        .hero-section h1 {
            font-size: 3.5rem;
            margin-bottom: 20px;
        }
        .hero-section p {
            font-size: 1.25rem;
            margin-bottom: 30px;
        }
        .cta-buttons .btn {
            margin: 5px;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="hero-section">
        <h1 class="display-4">Welcome to the Money Transfer System</h1>
        <p class="lead">Easily manage customer information and perform transactions securely.</p>
        <div class="cta-buttons">
            <a asp-controller="Customers" asp-action="Index" class="btn btn-primary btn-lg">View Customers</a>
            <a asp-controller="Customers" asp-action="Create" class="btn btn-success btn-lg">Add New Customer</a>
            <a asp-controller="Customers" asp-action="Transfer" class="btn btn-warning btn-lg">Transfer Money</a>
        </div>
    </div>
    <div class="text-center mt-5">
        <p>Learn more about <a href="https://www.linkedin.com/in/emirhansahin0/" target="_blank">Emirhan Şahin</a>.</p>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
</body>
</html>